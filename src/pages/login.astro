---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Login">
  <div class="min-h-[80vh] flex items-center justify-center px-4">
    <div
      class="w-full max-w-md p-8 space-y-6 bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-xl"
    >
      <div class="text-center">
        <h1 class="text-3xl font-extrabold tracking-tight">Welcome back</h1>
        <p class="text-zinc-500 dark:text-zinc-400 mt-2">
          Log in to track your training
        </p>
      </div>

      <form id="login-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1">Email</label>
          <input
            type="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 focus:ring-2 focus:ring-orange-500 outline-none transition-all"
            placeholder="runner@example.com"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Password</label>
          <input
            type="password"
            name="password"
            required
            class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 focus:ring-2 focus:ring-orange-500 outline-none transition-all"
            placeholder="••••••••"
          />
        </div>

        <div
          id="error-message"
          class="hidden text-red-500 text-sm font-medium bg-red-50 dark:bg-red-900/20 p-3 rounded-lg"
        >
        </div>

        <button
          type="submit"
          class="w-full py-3 px-4 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-lg transition-colors shadow-lg shadow-orange-900/20"
        >
          Sign In
        </button>
      </form>

      <p class="text-center text-sm text-zinc-500">
        Don't have an account?
        <a href="/register" class="text-orange-500 hover:underline font-medium"
          >Create one</a
        >
      </p>
    </div>
  </div>
</MainLayout>

<script>
  import { apiRequest } from "../lib/api";
  import { $token, setUser } from "../store/authStore";

  const form = document.getElementById("login-form") as HTMLFormElement;
  const errorDiv = document.getElementById("error-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (!errorDiv) return;

    errorDiv.classList.add("hidden");
    const formData = new FormData(form);
    const email = formData.get("email");
    const password = formData.get("password");

    try {
      const data = await apiRequest<{ token: string; user: any }>(
        "/auth/login",
        "POST",
        {
          body: { email, password },
        }
      );

      // 1. Save to Nano Store (which updates localStorage)
      $token.set(data.token);
      setUser(data.user);

      // 2. Redirect
      window.location.href = "/dashboard";
    } catch (err: any) {
      errorDiv.textContent = err.message || "Login failed";
      errorDiv.classList.remove("hidden");
    }
  });
</script>
