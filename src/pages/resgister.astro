---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Register">
  <div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
    <div
      class="w-full max-w-md p-8 space-y-6 bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-xl"
    >
      <div class="text-center">
        <h1
          class="text-3xl font-extrabold tracking-tight text-zinc-900 dark:text-white"
        >
          Join TrackLap
        </h1>
        <p class="text-zinc-500 dark:text-zinc-400 mt-2">
          Start tracking and assigning workouts
        </p>
      </div>

      <form id="register-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1">Username</label>
          <input
            type="text"
            name="userName"
            required
            class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 focus:ring-2 focus:ring-orange-500 outline-none transition-all"
            placeholder="johndoe"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Email</label>
          <input
            type="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 focus:ring-2 focus:ring-orange-500 outline-none transition-all"
            placeholder="runner@example.com"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Password</label>
          <input
            type="password"
            name="password"
            required
            minlength="6"
            class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 focus:ring-2 focus:ring-orange-500 outline-none transition-all"
            placeholder="••••••••"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">I am a...</label>
          <div class="grid grid-cols-2 gap-4">
            <label
              class="relative flex flex-col p-4 border rounded-xl cursor-pointer hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-all border-zinc-300 dark:border-zinc-700 has-[:checked]:border-orange-500 has-[:checked]:ring-1 has-[:checked]:ring-orange-500"
            >
              <input
                type="radio"
                name="role"
                value="Athlete"
                class="sr-only"
                checked
              />
              <span class="font-bold">Athlete</span>
              <span class="text-xs text-zinc-500">I want to run</span>
            </label>
            <label
              class="relative flex flex-col p-4 border rounded-xl cursor-pointer hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-all border-zinc-300 dark:border-zinc-700 has-[:checked]:border-orange-500 has-[:checked]:ring-1 has-[:checked]:ring-orange-500"
            >
              <input type="radio" name="role" value="Coach" class="sr-only" />
              <span class="font-bold">Coach</span>
              <span class="text-xs text-zinc-500">I want to train</span>
            </label>
          </div>
        </div>

        <div
          id="error-message"
          class="hidden text-red-500 text-sm font-medium bg-red-50 dark:bg-red-900/20 p-3 rounded-lg"
        >
        </div>

        <button
          type="submit"
          class="w-full py-3 px-4 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-lg transition-colors shadow-lg shadow-orange-900/20"
        >
          Create Account
        </button>
      </form>

      <p class="text-center text-sm text-zinc-500">
        Already have an account?
        <a href="/login" class="text-orange-500 hover:underline font-medium"
          >Log in</a
        >
      </p>
    </div>
  </div>
</MainLayout>

<script>
  import { apiRequest } from "../lib/api";

  const form = document.getElementById("register-form") as HTMLFormElement;
  const errorDiv = document.getElementById("error-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (!errorDiv) return;

    errorDiv.classList.add("hidden");
    const formData = new FormData(form);
    const payload = Object.fromEntries(formData);

    try {
      // Assuming your backend route is POST /auth/register
      await apiRequest("/auth/register", "POST", {
        body: payload,
      });

      // Success! Redirect to login
      alert("Account created successfully! Please log in.");
      window.location.href = "/login";
    } catch (err: any) {
      errorDiv.textContent = err.message || "Registration failed";
      errorDiv.classList.remove("hidden");
    }
  });
</script>
