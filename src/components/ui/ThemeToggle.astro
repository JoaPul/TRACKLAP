---
import { Sun, Moon } from "lucide-astro";
---

<button
  id="theme-toggle"
  class="p-2 rounded-lg bg-gray-100 dark:bg-zinc-800 text-gray-600 dark:text-gray-300 hover:ring-2 hover:ring-brand transition-all cursor-pointer"
  aria-label="Toggle Theme"
>
  <Sun class="hidden dark:block w-5 h-5" />
  <Moon class="block dark:hidden w-5 h-5" />
</button>

<script>
  // We wrap logic in a function to run it initially AND after navigation
  function setupThemeToggle() {
    const btn = document.getElementById("theme-toggle");

    // Remove old listener to prevent duplicates if using View Transitions
    const newBtn = btn?.cloneNode(true);
    if (newBtn && btn && btn.parentNode) {
      btn.parentNode.replaceChild(newBtn, btn);
    }

    // Re-select the fresh button
    const toggleBtn = document.getElementById("theme-toggle");

    toggleBtn?.addEventListener("click", () => {
      const element = document.documentElement;
      element.classList.toggle("dark");

      const isDark = element.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
  }

  // Run on initial load
  setupThemeToggle();

  // Run on View Transition navigation (if you add it later)
  document.addEventListener("astro:after-swap", setupThemeToggle);
</script>
